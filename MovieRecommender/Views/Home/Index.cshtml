@{
    ViewData["Title"] = "Home Page";
}

@model SearchMovieModel

<div class="card mt-5 m-3 p-3 d-inline-flex bg-light bg-light">

    <div class="container-fluid d-flex justify-content-around flex-wrap">
        <div class="card p-3 m-3 mb-0 border-0 bg-transparent">
            <h2>Get movie recommendations based on</h2>
        </div>
    </div>

    <div class="container-fluid d-flex justify-content-around flex-wrap">

        <div class="card p-3 m-3 bg-white" style="width: 18rem;">
            <h4>Your favourite movie</h4>
            <p>Find your favourite movie using our search and get recommendations for similar movies.</p>
            <a class="nav-link text-dark m-0 p-0 mt-auto" asp-area="" asp-controller="Movie" asp-action="SearchByFavouriteMovie">
                <div class="card homepage-card">
                    <div class="card-body text-center p-1">
                        <h5>Find Favourite Movie</h5>
                    </div>
                </div>
            </a>
        </div>

        @*MORE OPTIONS COMING*@

    </div>

</div>